{% extends 'page.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Booking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                {# dateCommande #}
                <th>Date de la commande</th>
                <th>Date de d√©part</th>
                <th>Date de retour</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.DateCommande ? booking.DateCommande|date('Y-m-d') : '' }}</td>
                <td>{{ booking.DateBegin ? booking.DateBegin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.DateEnd ? booking.DateEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.Price }}</td>
                <td>
                    <a href="{{ path('app_booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_booking_new') }}">Create new</a>
{% endblock %}
