{% extends 'page.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="d-flex flex-column flex-column-fluid" data-select2-id="select2-data-147-crvd">

							<!--begin::Content-->
							<div id="kt_app_content" class="app-content flex-column-fluid" data-select2-id="select2-data-kt_app_content">
								<!--begin::Content container-->
								<div id="kt_app_content_container" class="app-container container-xxl" data-select2-id="select2-data-kt_app_content_container">
									<!--begin::Card-->
									<div class="card" data-select2-id="select2-data-146-r0mv">
										<!--begin::Card header-->
										<div class="card-header border-0 pt-6" data-select2-id="select2-data-145-2cls">
											<!--begin::Card title-->
											<div class="card-title">
												<!--begin::Search-->
												<div class="d-flex align-items-center position-relative my-1">
													<!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
													<span class="svg-icon svg-icon-1 position-absolute ms-6">
														<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
															<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
															<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
														</svg>
													</span>
													<!--end::Svg Icon-->
													<input type="text" data-kt-user-table-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Rechercher un utilisateur">
												</div>
												<!--end::Search-->
											</div>
											<!--begin::Card title-->
											<!--begin::Card toolbar-->
											<div class="card-toolbar">
												<!--begin::Toolbar-->
												<div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">


													<!--begin::Add user-->
													<a class="btn btn-primary" href="/user/new">
													<!--begin::Svg Icon | path: icons/duotune/arrows/arr075.svg-->
													<span class="svg-icon svg-icon-2">
														<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
															<rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="currentColor"></rect>
															<rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="currentColor"></rect>
														</svg>
													</span>
													<!--end::Svg Icon-->Créer un utilisateur</a>
													<!--end::Add user-->
												</div>
												<!--end::Toolbar-->


											</div>
											<!--end::Card toolbar-->
										</div>
										<!--end::Card header-->
										<!--begin::Card body-->
										<div class="card-body py-4">
											<!--begin::Table-->
											<div id="kt_table_users_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer"><div class="table-responsive"><table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_table_users">
												<!--begin::Table head-->
												<thead>
													<!--begin::Table row-->
													<tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">



                                                        <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" style="width: 277.117px;" aria-label="User: activate to sort column ascending">Utilisateur</th>
                                                        <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" style="width: 162.15px;" aria-label="Role: activate to sort column ascending">Role</th>
                                                        <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" style="width: 162.15px;" aria-label="Last login: activate to sort column ascending">Dernière connexion</th>

                                                        <th class="text-end min-w-100px sorting_disabled" rowspan="1" colspan="1" style="width: 130.25px;" aria-label="Actions">Actions</th></tr>
													<!--end::Table row-->
												</thead>
												<!--end::Table head-->
												<!--begin::Table body-->
												<tbody class="text-gray-600 fw-semibold">
{% for user in users %}
												<tr class="odd">
														<!--begin::Checkbox-->

														<!--end::Checkbox-->
														<!--begin::User=-->
														<td class="d-flex align-items-center">
															<!--begin:: Avatar -->
															<div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
																<a href="{{ path('app_user_show', {'id': user.id}) }}">
																	<div class="symbol-label">

{# if PictureProfile #}
 {% if user.PictureProfile is defined %}
 {% if user.PictureProfile is not null %}
																		<img src="{{ asset('upload/' ~ user.pictureProfile) }}" alt="" class="w-100">

	   {% else %}

																		<img src="{{ asset('img/profileDefault.jpg') }}" alt="" class="w-100">
    {% endif %}
                                                            {% endif %}




																	</div>
																</a>
															</div>
															<!--end::Avatar-->
															<!--begin::User details-->
															<div class="d-flex flex-column">
																<a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-gray-800 text-hover-primary mb-1">
                                                                {{user.prenom}} {{user.nom}}</a>
																<span>{{user.email}}</span>

{% if user.phone is not null %}
 <a href="tel:{{user.phone}}"><i class="fa fa-phone"></i> {{user.phone}}</a>
{% endif %}

															</div>
															<!--begin::User details-->
														</td>
														<!--end::User=-->
														<!--begin::Role=-->
														<td>
                                                                            {% for role in user.roles %}
                        {% if role == 'ROLE_ADMIN' %}
                            <span class="badge bg-danger text-white">Administrateur</span>
                        {% elseif role == 'ROLE_USER' %}
                            <span class="badge bg-info text-white">Utilisateur</span>
                         {% elseif role == 'ROLE_WEBMASTER' %}
                            <span class="badge bg-warning text-white">Webmaster</span>
						{% elseif role == 'ROLE_CLIENT_API' %}
                            <span class="badge bg-success text-white">Client API</span>
							{% elseif role == 'ROLE_CLIENT_BLACKSHEEP' %}
                            <span class="badge bg-danger text-white">Client BLACKSHEEP VAN</span>
                        {% endif %}

                    {% endfor %}
                                                        </td>
														<!--end::Role=-->
														<!--begin::Last login=-->
														<td>
															<div class="badge badge-light fw-bold">


                                                            {% if user.LastLogIn is defined %}
                                                            {% if user.LastLogIn is not null %}
															{# lastLogin date d/m/y h m s #}

                                                            {{user.lastLogin|date('d/m/Y - H:i:s')}}
                                                            {% else %}
                                                            {{ 'Pas de connexion' }}
                                                           {% endif %}
                                                            {% endif %}


                                                            </div>
														</td>
														<!--end::Last login=-->


														<!--begin::Action=-->
														<td class="text-end">
															<a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
															<!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
															<span class="svg-icon svg-icon-5 m-0">
																<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
																	<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor"></path>
																</svg>
															</span>
															<!--end::Svg Icon--></a>
															<!--begin::Menu-->
															<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
																<!--begin::Menu item-->
																<div class="menu-item px-3">
																	<a href="{{ path('app_user_show', {'id': user.id}) }}" class="menu-link px-3"><i class="fa fa-pen m-2"> </i> Editer</a>
																</div>
																<!--end::Menu item-->
																<!--begin::Menu item-->
																<div class="menu-item px-3">
																	<a href="{{ path('app_user_delete', {'id': user.id}) }}" class="menu-link px-3" ><i class="fa fa-trash m-2"> </i> Supprimer</a>
																</div>
																<!--end::Menu item-->
															</div>
															<!--end::Menu-->
														</td>
														<!--end::Action=-->
													</tr>
{% endfor %}

                                                    </tbody>
												<!--end::Table body-->
											</table></div>
                                           <!--end::Table-->
										</div>
										<!--end::Card body-->
									</div>
									<!--end::Card-->
								</div>
								<!--end::Content container-->
							</div>
							<!--end::Content-->
						</div>
{% endblock %}
